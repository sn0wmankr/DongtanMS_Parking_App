<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.DongtanParking" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- ✅ 기본 테마 컬러 -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- ✅ 텍스트 및 배경 -->
        <item name="android:textColorPrimary">@color/text_dark</item>
        <item name="android:colorBackground">@color/background_light</item>

        <!-- ✅ 버튼 스타일 기본값 -->
        <item name="android:buttonStyle">@style/Widget.App.Button.Primary</item>
    </style>

    <!-- 🌿 공용 버튼 스타일 -->
    <style name="Widget.App.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary_green</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NumPadButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:backgroundTint">@color/numpad_button_background_tint</item>
        <item name="android:textColor">@color/numpad_button_text_color</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
</resources>
